<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".facilitators.FRequestAccessActivity">

    <Button
        android:id="@+id/FRA_participant_button2"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_marginBottom="35dp"
        android:background="@color/colorPrimary"
        android:text="Request Access"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Currently, only individuals associated with affiliated organizations may enroll as facilitators. Your email is not registered with us. If you'd like to request facilitator access to the platform, please fill out the form below. Thank you!"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>